{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id_card": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "[0-9]+_[a-f]{6}",
          "description": "scrambled user id"
        },
        "display_name": {
          "type": "string"
        },
        "permalink": {
          "type": "string",
          "format": "uri"
        },
        "photo_urls": {
          "type": "object",
          "properties": {
            "large": {
              "type": "string",
              "format": "uri"
            },
            "thumb": {
              "type": "string",
              "format": "uri"
            },
            "mini_thumb": {
              "type": "string",
              "format": "uri"
            },
            "medium_thumb": {
              "type": "string",
              "format": "uri"
            },
            "maxi_thumb": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "large", "thumb", "mini_thumb",  "medium_thumb", "maxi_thumb"
          ]
        }
      },
      "required": [
        "id", "display_name", "permalink", "photo_urls"
      ]
    }
  },
  "required": [
    "id_card"
  ]
}
